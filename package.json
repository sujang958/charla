{
  "name": "charla",
  "version": "1.0.1",
  "main": "./out/app.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn build:src && electron .",
    "format": "prettier ./src ./screens/**/*.{css,html}",
    "build:src": "yarn format && tsc",
    "build:app": "yarn build:src && electron-builder --win --x64"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/tmi.js": "^1.8.2",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "tmi.js": "^1.8.5"
  },
  "author": {
    "name": "sujang958"
  },
  "build": {
    "productName": "Charla",
    "asar": true,
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "shortcutName": "Charla",
      "uninstallDisplayName": "Charla 제거 프로그램"
    },
    "directories": {
      "output": "./dist/",
      "app": "./"
    }
  }
}
